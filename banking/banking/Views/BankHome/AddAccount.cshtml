@{
}
@section CardCss {
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/css/style.css">

}
@section Scripts {


    <script src="~/js/main.js"></script>

}
@model AccountModel

@if (ViewBag.IsSuccess)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Hurray!</strong>You have created New Account 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
    <div class="wrapper">
        <div class="image-holder">
            <img src="~/images/form-wizard.png" alt="">
        </div>
        <form method="post">
            <div id="wizard">
                <!-- SECTION 1 -->
                <h4></h4>
                <section>
                    <div class="form-row form-group">
                        <div class="form-holder">
                            <label asp-for="Name">
                                Name *
                            </label>
                            <input asp-for="Name" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <label asp-for="Contry">
                            Country *
                        </label>
                        <div class="form-holder">
                            <select asp-for="Contry" class="form-control">
                                <option value="India" class="option">India</option>
                                <option value="united states" class="option">United States</option>
                                <option value="united kingdom" class="option">United Kingdom</option>
                            </select>
                            <i class="zmdi zmdi-caret-down"></i>
                        </div>
                    </div>
                    <div class="form-row">
                        <label asp-for="Address">
                            Address *
                        </label>
                        <input type="text" asp-for="Address" class="form-control" placeholder="Street address" style="margin-bottom: 20px">
                    </div>
                    <div class="form-row">
                        <label asp-for="City">
                            Town / City *
                        </label>
                        <input type="text" asp-for="City" class="form-control">
                    </div>
                    <div class="form-row">
                        <label asp-for="PostCode">
                            Postcode / Zip *
                        </label>
                        <input type="text" asp-for="PostCode" class="form-control">
                    </div>
                </section>

                <!-- SECTION 2 -->
                <h4></h4>
                <section>

                    <div class="form-row">
                        <label asp-for="AccountType">
                            Account Type
                        </label>&nbsp;
                        <div class="form-holder">
                            <select asp-for="AccountType" class="form-control">
                                <option value="Saving" class="option">Saving</option>
                                <option value="Current" class="option">Current</option>
                            </select>&nbsp;&nbsp;&nbsp;
                            <i class="zmdi zmdi-caret-down"></i>
                        </div>
                    </div>
                    <div class="form-row">
                        <label asp-for="Branch">
                            Branch
                        </label>
                        <input type="text" asp-for="Branch" class="form-control">
                    </div>

                    <div class="form-row">
                        <label asp-for="AvailableBalance">
                            Amount
                        </label>
                        <input type="number" asp-for="AvailableBalance" class="form-control">
                    </div>
                    <button type="submit" value="CreateAccount" class="btn btn-outline-info">Create Account</button>

                </section>
            </div>
        </form>
    </div>